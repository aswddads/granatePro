<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/g_3"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <FrameLayout
        android:background="@color/colorPrimary"
        android:id="@+id/fl_top_login_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_un_login"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <TextView
                android:paddingLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_un_login"
                android:drawableRight="@drawable/right_arrow"
                android:textSize="20sp"
                android:text="  登录查看个人收藏                   "
                android:id="@+id/tv_un_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:background="@color/view_bg"
            android:visibility="gone"
            android:id="@+id/ll_login"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/add_pic"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16sp"
                android:text="aswddads"
                android:id="@+id/tv_login"
                android:layout_width="100dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:padding="@dimen/dp_10"
        android:background="@color/view_bg"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:text="切换背景"
        android:id="@+id/tv_change_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/view_bg"
        android:orientation="horizontal"
        android:id="@+id/ll_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/tv_name"
            android:gravity="center"
            android:text="个人说明:"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@android:color/black"
            android:text="@string/my_des"
            android:id="@+id/tv_des"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/view_bg"
        android:textColor="@android:color/black"
        android:drawableEnd="@drawable/right_arrow"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:text="我的新闻"
        android:padding="10dp"
        android:id="@+id/tv_my_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/view_bg"
        android:textColor="@android:color/black"
        android:drawableEnd="@drawable/right_arrow"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:text="个人设置"
        android:padding="10dp"
        android:id="@+id/tv_my_settinggs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_copy_right"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/copy_right"
            android:textSize="12sp"
            android:text="@string/copy_right"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </RelativeLayout>

</LinearLayout>